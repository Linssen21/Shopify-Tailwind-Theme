

{% paginate collection.products by section.settings.number_of_collection %}
    {% for product in collection.products %}

    {% if product.featured_image %}
        <img width="200" height="200" loading="lazy" src="{{ product.featured_image | img_url: "medium" }}" alt="{{ product.featured_image.alt }}">
    {% endif %}

    <span>{{ product.vendor }}</span>

    <a href="{{ product.url }}">{{ product.title }}</a>

    <p>{{ product.price }}</p>

    {% else %}
        <p>There are no products inside of this collection</p>
    {% endfor %}

    {% render 'pagination', pagination: paginate %}
{% endpaginate %}

{% schema %}
{
    "name": "Collection",
    "settings": [
        {
            "type": "range",
            "id": "number_of_collection",
            "label": "Collection Per page",
            "step": 1,
            "min": 1,
            "max": 6,
            "default": 5
        }
    ]
}
{% endschema %}
{% assign media = media | default: false %}
<!-- {% echo media.media_type %} -->
{% case media.media_type %}
    {% when 'image' %}
        <img width="1920" height="1080" loading="lazy" src="{{ media | img_url: 'large' }}" alt="{{ media.preview_image.alt }}" class="w-full h-full object-hover">
    {% when 'external_video' %}
        {{ media | external_video_tag: class: 'w-full h-80 object-cover' }}
    {% when 'video' %}
        {{ media | video_tag: controls: true, class: 'w-full h-full object-cover' }}
    {% when 'model' %}
        {{ media | model_viewer_tag }}
    {% else %}
        {{ media | media_tag }}
{% endcase %}
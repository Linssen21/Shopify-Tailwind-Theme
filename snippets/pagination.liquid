<!-- Needs to be set due to theme-check -->
<!-- https://shopify.dev/api/liquid/objects/paginate -->
<!-- https://www.shopify.com.ph/partners/blog/shopify-pagination -->

{% assign pagination = pagination | default: false %}

{% if pagination.pages > 1 %}
<nav role="navigation" class="flex justify-center items-start my-8">
    <!-- <div>{{ pagination.pages }}</div> -->
    <!-- Check if has a previous url -->
    {% if pagination.previous %}
        <a href="{{ pagination.previous.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium">Previous</a>
    {% endif %}


    {% for part in pagination.parts %}
        {% if part.is_link %}
        <a href="{{ part.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium">{{ part.title }}</a>
        {% else %}
            {% if part.title == pagination.current_page %}
                <a href="{{ part.url }}" class="border border-gray-600 bg-gray-600 text-white px-8 py-3 mx-1 rounded-sm font-medium">{{ part.title }}</a>
            {% endif %}
        {% endif %}
    {% endfor %}

    {% if pagination.next %}
    <a href="{{ pagination.next.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-8 py-3 mx-1 rounded-sm font-medium">Next</a>
    {% endif %}

</nav>
{% endif %}